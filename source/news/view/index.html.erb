            $(document).ready(function() {
                if ($.urlParam('slug')) {
                    var slug = $.urlParam('slug');
                    var href = $(location).attr('href');
                    var search = $(location).attr('search');
                    var newHref = href.replace(search, slug);
                    console.log  (newHref);

                    window.location.href = newHref;

                };

            });
        </script>
